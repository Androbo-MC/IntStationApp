<?xml version="1.0" encoding="utf-8"?>
<!-- 候補駅画面 -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 駅名ボタン -->
    <TextView
        android:id="@+id/stationName"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center_vertical|center"
        android:maxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- ボタンの角を丸くする -->
    <corners android:radius="6dp" />

    <!-- LINEボタン -->
    <ImageButton
        android:id="@+id/lineButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toEndOf="@+id/stationName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s011_suggested_01" />

    <!-- 周辺情報ボタン -->
    <ImageButton
        android:id="@+id/areaButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="352dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/s011_suggested_02" />

</android.support.constraint.ConstraintLayout>
